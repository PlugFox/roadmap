{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (debug)",
            "type": "dart",
            "program": "web/main.dart",
            "request": "launch",
            "flutterMode": "debug",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {}
        },
        {
            "name": "Run (release)",
            "type": "dart",
            "program": "web/main.dart",
            "request": "launch",
            "flutterMode": "release",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {}
        },
        {
            "name": "Test (VM)",
            "request": "launch",
            "type": "dart",
            "program": "backend/test/server_test.dart",
            "env": {
                "ENVIRONMENT": "test"
            },
            "console": "debugConsole",
            "runTestsOnDevice": false,
            "templateFor": "test",
            "toolArgs": [
                "--color",
                "--coverage=.coverage",
                "--reporter=expanded",
                "--platform=vm", // chrome
                "--file-reporter=json:.coverage/tests.json",
                "--timeout=30s",
                "--concurrency=12"
                /* "--name=handles failed connection attempts" */
            ],
            "args": []
        }
    ]
}